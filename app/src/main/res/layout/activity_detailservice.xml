<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="false"
    tools:context=".detailservice">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:elevation="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_launcher_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/vendor_name"
            android:textSize="18dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:text="Silver"
            android:textSize="14dp"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_bold"
            android:text="500K"
            android:textSize="16dp"
            android:layout_gravity="end"/>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/quicksand_medium"
            android:text="asdff di sini Deskripsi service"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:textAllCaps="false"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="@string/contact"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/contact_vendor"
                android:textSize="16dp"
                android:layout_marginLeft="45dp"/>

            <Button
                android:textAllCaps="false"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="@string/contact"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand_bold"
                android:background="@drawable/contact_vendor"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projects"
            android:textSize="18dp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_pro1"
                    android:layout_width="195dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_pro2"
                    android:layout_width="195dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_pro3"
                    android:layout_width="195dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>