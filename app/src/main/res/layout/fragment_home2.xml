<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/tv_searchhome"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_bar"
            android:hint="@string/hint_search"
            android:lines="1"
            android:maxLines="1"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_promotrend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo &amp; Trendings"
            android:textSize="23dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="30dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="10dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_bann1"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"/>

                <ImageView
                    android:id="@+id/img_bann2"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"/>

                <ImageView
                    android:id="@+id/img_bann3"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"/>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tv_vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agency"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tv_viewall1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textSize="18dp"
                android:layout_marginStart="190dp"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="10dp"
            android:paddingRight="0dp"
            android:paddingLeft="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_ven1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_ven2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_ven3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_ven4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_ven5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tv_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tv_viewall2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textSize="18dp"
                android:layout_marginStart="195dp"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="10dp"
            android:paddingRight="0dp"
            android:paddingLeft="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_des1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_des2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_des3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_des4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_des5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tv_how"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How it works"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tv_viewall3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textSize="18dp"
                android:layout_marginStart="140dp"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="10dp"
            android:paddingRight="0dp"
            android:paddingLeft="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_how1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_how2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_how3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_how4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_how5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Click Here to Logout"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="account"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>