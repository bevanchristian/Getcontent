<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".list_vendor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Daftar Vendor"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:background="#51ADCF" />

        <LinearLayout
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            android:layout_marginTop="15dp"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_round_homepg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:padding="2dp"/>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="March Media"/>
                <TextView
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videography, Photography"/>
                <TextView
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/black"
                    android:textSize="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="March Media merupakan production house yang didirikan oleh hans"/>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</ScrollView>